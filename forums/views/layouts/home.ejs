<%- include('../fragments/header') %>
<%- include('../fragments/sidebar') %>

            <content>
                <nav>
                    <ul>
                        <li selected>
                            <a href='/'>Categories</a>
                        </li>
                        <li>
                            <a href='/latest'>Latest</a>
                        </li>
                        <li>
                            <a href='/top'>Top</a>
                        </li>
<%
    if(isSignedIn){
%>
                        <filler></filler>
                        <li>
                            <a href='/thread'>New Thread</a>
                        </li>
<%
    }
%>
                    </ul>
                </nav>
                <lists>
                    <list type='categories'>
                        <list-head>
                            <row>
                                <cell>Category</cell>
                                <cell>Topics</cell>
                            </row>
                        </list-head>
                        <list-body>
<%
    for(const category of data.threads){
%>
                            <row style='border-left: solid 6px <%= category.color %>'>
                                <cell>
                                    <a href='/c/<%= category.slug %>'>
                                        <h2><%= category.title %></h2>
                                        <div><%= category.description %></div>
                                    </a>
                                </cell>
                                <cell><%= category.threads %></cell>
                            </row>
<%
    }
%>
                        </list-body>
                    </list>
                    <list type='latest'>
                        <list-head>
                            <row>
                                <cell>Latest</cell>
                            </row>
                        </list-head>
                        <list-body>
<%
    const mappedCategories = {};
    data.categories.forEach((category, index) => {
        mappedCategories[category._id.toString()] = index;
    });

    for(const thread of data.latest){
%>
                            <row>
                                <cell>
                                    <a href='/t/<%= thread._id.toString() %>'>
                                        <h2><%= thread.title %></h2>
                                    </a>
                                    <categories>
<%
        for(const category of thread.categories){
%>
                                        <a href='/c/<%= data.categories[mappedCategories[category]].slug %>'><span style='background-color: <%= data.categories[mappedCategories[category]].color %>'></span><%= data.categories[mappedCategories[category]].title %></a>
<%
        }
%>
                                    </categories>
                                    <a href='/t/<%= thread._id.toString() %>'>
                                        <div><%= thread.content.substr(0, 160) %></div>
                                    </a>
                                </cell>
                                <cell>0</cell>
                            </row>
<%
    }
%>
                        </list-body>
                    </list>
                </lists>
            </content>

<%- include('../fragments/footer') %>