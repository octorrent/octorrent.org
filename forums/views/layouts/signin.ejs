<%- include('../fragments/header') %>

            <content type='main'>
                <h1>Welcome back!</h1>
                <h2>Sign in to your account</h2>
                <form action='https://api.octorrent.org/signin' method='POST' onsubmit='onSubmit(event)' target='hiddenFrame'>
                    <input-field title='Email'>
                        <input type='email' name='email' required placeholder='Email' onkeypress='formAdjust(event)' />
                    </input-field>
                    <input-field title='Password'>
                        <input type='password' name='password' required placeholder='Password' onkeypress='formAdjust(event)' />
                    </input-field>
                    <response></response>
                    <input type='submit' value='Sign In' />
                </form>
            </content>
            <content type='sub'>
                <h1>New Here?</h1>
                <h2>Sign up and join the discussion!</h2>
                <a class='button' href='/signup'>Sign Up</a>
            </content>
            <iframe name='hiddenFrame'></iframe>

<%- include('../fragments/footer') %>
